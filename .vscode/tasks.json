{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/client",
                "${fileDirname}/client_trans_controller.cpp",
                "${fileDirname}/inputer/cin_data_inputer.cpp",
                "${fileDirname}/inputer/data_inputer.cpp",
                "${fileDirname}/reader/data_reader.cpp",
                "${fileDirname}/reader/file_data_reader.cpp",
                "${fileDirname}/writer/data_writer.cpp",
                "${fileDirname}/writer/remote_data_writer.cpp",
                "${fileDirname}/writer/session.cpp",
                "-I",
                "${fileDirname}/inputer",
                "-I",
                "${fileDirname}/reader",
                "-I",
                "${fileDirname}/writer",
                "-I",
                ".."
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}